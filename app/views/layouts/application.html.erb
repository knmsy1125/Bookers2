<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-dark bg-dark">
      <div class="container">
        <div class="navbar-header">
          <span class="navbar-brand" ><%=link_to"Bookers",root_path %></span>
        </div>

        <ul class="navbar-nav d-flex flex-row">
          <% if user_signed_in? %>
          <li><%= link_to "Home", user_path(current_user.id), class: "fas fa-home nav-link ml-3" %></li>
          <li><%= link_to "Users", users_path, class: "fas fa-user-cog fa-users nav-link ml-3" %></li>
          <li><%= link_to "Books", books_path, method: :get, class: "fas fa-book-open nav-link ml-3" %></li>
          <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt nav-link ml-3" %></li>
          <% else %>
          <li><%= link_to "Home", root_path, class: "fas fa-home nav-link ml-3" %></li>
          <li><%= link_to "About", home_about_path, class: "fas fa-link nav-link ml-3" %></li>
          <li><%= link_to "sign up", new_user_registration_path, class: "fas fa-user-plus ml-3" %></li>
          <li><%= link_to "login", new_user_session_path, class: "fas fa-sign-in-alt nav-link ml-3" %></li>
          <% end %>
        </ul>
      </div>
    </header>

    <div class="main">
      <%= yield %>
    </div>

    <footer class="footer" style="text-align: center;">CopyRight Infratop.inc
    </footer>
  </body>
</html>
