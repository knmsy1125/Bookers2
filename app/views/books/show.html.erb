<p id="notice">
  <%= notice %>
</p>

<div class="container">
  <div class="row">
    <%= render 'users/list', book: @book, user: @user_show %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user_show) do %>
              <%= attachment_image_tag @user_show, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "100×100" %>
              <%= @book_show.user.name %>
              <% end %>
            </td>
            <td>
              <%= @book_show.title %>
            </td>
            <td>
              <%= @book_show.body %>
            </td>
            <td>
              <% if @user == @user_show %>
              <%= link_to "Edit", edit_book_path(@book_show.id), class: "btn btn-success"  %>
              <% end %>
            </td>
            <td>
              <% if @user == @user_show %>
              <%= link_to "Destroy", book_path(@book_show.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
